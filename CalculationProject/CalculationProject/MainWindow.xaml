<Window x:Class="CalculationProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculationProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="772">
            <TextBox HorizontalAlignment="Left" Height="109" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Path=X}" VerticalAlignment="Top" Width="273"/>
            <TextBox HorizontalAlignment="Left" Height="109" Margin="10,281,0,0" TextWrapping="Wrap" Text="{Binding Path=Y}" VerticalAlignment="Top" Width="273"/>
            <TextBox HorizontalAlignment="Left" Height="109" Margin="385,139,0,0" TextWrapping="Wrap" Text="{Binding Path=Z, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="273"/>
            <Button Command="{Binding _addCommand}" Content="加算する" HorizontalAlignment="Left" Margin="385,88,0,0" VerticalAlignment="Top" Width="273" Height="31"/>
        </Grid>

    </Grid>
</Window>
